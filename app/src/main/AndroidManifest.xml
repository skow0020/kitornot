<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.skow.kitornot">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.skow.kitornot.ParseConnection"
        android:allowBackup="true"
        android:icon="@drawable/loginicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:largeHeap="true"
        android:theme="@style/NoActionBar">
        <activity android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.skow.kitornot.UserHome.UserHomeActivity"
            android:label="@string/yourcats"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar" />
        <activity
            android:name="com.skow.kitornot.UserHome.UserCatDetails"
            android:label="@string/title_activity_user_cat_details"
            android:parentActivityName="com.skow.kitornot.UserHome.UserHomeActivity"
            android:theme="@style/NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.skow.kitornot.UserHome.UserHomeActivity" />
        </activity>
        <activity
            android:name="com.skow.kitornot.RatingActivity.RatingActivity"
            android:label="@string/title_activity_rating"
            android:parentActivityName="com.skow.kitornot.UserHome.UserHomeActivity"
            android:theme="@style/NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.skow.kitornot.UserHome.UserHomeActivity" />
        </activity>
        <activity
            android:name="com.skow.kitornot.TopCatsActivity.TopCatsActivity"
            android:label="@string/title_activity_top_cats"
            android:parentActivityName="com.skow.kitornot.UserHome.UserHomeActivity"
            android:theme="@style/NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.skow.kitornot.UserHome.UserHomeActivity" />
        </activity>
        <activity
            android:name="com.skow.kitornot.TopCatsActivity.TopCatDetails"
            android:label="@string/title_activity_top_cat_details"
            android:parentActivityName="com.skow.kitornot.TopCatsActivity.TopCatsActivity"
            android:theme="@style/NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.skow.kitornot.TopCatsActivity.TopCatsActivity" />
        </activity>
    </application>

</manifest>